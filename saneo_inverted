    key <AD04>	{ [	s       	, S       	, parenright	, U0283     	, 0       	, NoSymbol  	, NoSymbol 	] };
    //        	   	        	          	            	            	          	            	           	
    key <AD03>	{ [	n       	, N       	, underscore	, U014B     	, 1       	, U0364     	, NoSymbol 	] };
    key <AD02>	{ [	r       	, R       	, slash     	, U0279     	, 2       	, NoSymbol  	, NoSymbol 	] };
    key <AD01>	{ [	t       	, T       	, braceright	, U03B8     	, 3       	, NoSymbol  	, NoSymbol 	] };
