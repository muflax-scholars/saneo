    // bottom row
    //        	   	normal  	, shift   	, mod3       	, mod3+shift  	, mod4    	, mod4+shift	, mod3+mod4
    key <BKSP>	{ [	percent 	, grave   	, at         	, NoSymbol    	, Home    	, Home      	, NoSymbol 	] };
    key <AE12>	{ [	asterisk	, colon   	, ssharp     	, NoSymbol    	, Home    	, Home      	, NoSymbol 	] };
